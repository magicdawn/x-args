{
  "name": "@magicdawn/x-args",
  "version": "1.6.0",
  "description": "play with cli commands like a composer",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "x-args": "dist/bin.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md"
  ],
  "scripts": {
    "prepare": "husky",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "test": "mocha",
    "test-cover": "nyc --reporter=lcov --reporter=text mocha",
    "report-cover": "codecov",
    "build:watch": "rm -rf lib; tsc -d -w"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/magicdawn/x-args.git"
  },
  "keywords": [
    "x-args",
    "xargs",
    "args-composer",
    "args-manipulator"
  ],
  "author": "magicdawn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/magicdawn/x-args/issues"
  },
  "homepage": "https://github.com/magicdawn/x-args#readme",
  "dependencies": {
    "@parcel/watcher": "^2.5.1",
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "clipanion": "^3.2.1",
    "es-toolkit": "^1.37.2",
    "execa": "^9.5.3",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "mac-helper": "^0.1.5",
    "mitt": "^3.0.1",
    "mnemonist": "^0.40.3",
    "ms": "^2.1.3",
    "needle-kit": "^3.4.2",
    "p-event": "^6.0.1",
    "shell-escape": "^0.2.0",
    "superjson": "^2.2.2",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@magicdawn/eslint-config": "latest",
    "@magicdawn/prettier-config": "^0.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/ms": "^2.1.0",
    "@types/node": "^22.15.17",
    "@types/shell-escape": "^0.2.3",
    "eslint": "9.26.0",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.2",
    "mocha": "11.2.2",
    "nyc": "17.1.0",
    "prettier": "^3.5.3",
    "should": "^13.2.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.4.0",
    "type-fest": "^4.41.0",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,tsx,json,yml,md}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild",
      "@swc/core",
      "@parcel/watcher"
    ]
  },
  "packageManager": "pnpm@10.10.0+sha512.d615db246fe70f25dcfea6d8d73dee782ce23e2245e3c4f6f888249fb568149318637dca73c2c5c8ef2a4ca0d5657fb9567188bfab47f566d1ee6ce987815c39"
}
