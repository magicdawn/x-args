{
  "name": "@magicdawn/x-args",
  "version": "0.0.3",
  "description": "play with cli commands like a composer",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "x-args": "bin/x-args.js",
    "@magicdawn/x-args": "bin/x-args.js"
  },
  "files": [
    "bin/x-args.js",
    "lib",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "mocha",
    "test-cover": "nyc --reporter=lcov --reporter=text mocha",
    "report-cover": "codecov",
    "build": "rm -rf lib; tsc -d",
    "build:watch": "rm -rf lib; tsc -d -w",
    "prepublishOnly": "npm run build",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/magicdawn/x-args.git"
  },
  "keywords": [
    "x-args",
    "xargs",
    "args-composer",
    "args-manipulator"
  ],
  "author": "magicdawn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/magicdawn/x-args/issues"
  },
  "homepage": "https://github.com/magicdawn/x-args#readme",
  "dependencies": {
    "chalk": "4",
    "clipanion": "3.2.0-rc.11",
    "fs-extra": "^10.1.0",
    "globby": "11"
  },
  "devDependencies": {
    "@magicdawn/eslint-config": "latest",
    "@magicdawn/prettier-config": "^0.0.2",
    "@swc/core": "^1.2.245",
    "@swc/helpers": "^0.4.11",
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.45",
    "codecov": "^3.8.2",
    "eslint": "8.23.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "mocha": "10.0.0",
    "nyc": "15.1.0",
    "prettier": "^2.7.1",
    "should": "^13.2.3",
    "ts-node": "^10.9.1",
    "type-fest": "^2.19.0",
    "typescript": "^4.8.2"
  },
  "lint-staged": {
    "*.{ts,tsx,json,yml,md}": [
      "prettier --write"
    ]
  }
}
