{
  "name": "x-args",
  "version": "0.0.1",
  "description": "x-args",
  "main": "index.js",
  "bin": {
    "x-args": "bin/x-args.js"
  },
  "files": [
    "bin/x-args.js",
    "lib"
  ],
  "scripts": {
    "test": "mocha",
    "test-cover": "nyc --reporter=lcov --reporter=text mocha",
    "report-cover": "codecov",
    "build": "rm -rf lib; rm tsconfig.tsbuildinfo; tsc",
    "prepublishOnly": "npm run build",
    "start": "ts-node ./src/index.ts",
    "start:debug": "node --inspect-brk -r ts-node/register ./src/index.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/magicdawn/x-args.git"
  },
  "keywords": [
    "x-args",
    "xargs",
    "args-composer",
    "args-manipulator"
  ],
  "author": "magicdawn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/magicdawn/x-args/issues"
  },
  "homepage": "https://github.com/magicdawn/x-args#readme",
  "devDependencies": {
    "@magicdawn/eslint-config": "latest",
    "@magicdawn/prettier-config": "^0.0.2",
    "@swc/core": "^1.2.196",
    "@swc/helpers": "^0.3.17",
    "@types/node": "^17.0.38",
    "codecov": "^3.3.0",
    "eslint": "8.17.0",
    "husky": "8.0.1",
    "lint-staged": "^13.0.0",
    "mocha": "10.0.0",
    "nyc": "15.1.0",
    "prettier": "^2.6.2",
    "should": "^13.2.3",
    "ts-node": "^10.8.1",
    "type-fest": "^2.13.0",
    "typescript": "^4.7.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,less,jsx,ts,tsx}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "chalk": "4",
    "clipanion": "3.2.0-rc.11",
    "globby": "11"
  }
}
