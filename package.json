  "author": "magicdawn",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/magicdawn/x-args/issues"
  },
  "homepage": "https://github.com/magicdawn/x-args#readme",
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "clipanion": "^3.2.1",
    "delay": "^6.0.0",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "lodash-es": "^4.17.21",
    "mac-helper": "^0.1.5",
    "mnemonist": "^0.39.8",
    "ms": "^2.1.3",
    "shell-escape": "^0.2.0",
    "superjson": "^2.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@magicdawn/eslint-config": "latest",
    "@magicdawn/prettier-config": "^0.0.4",
    "@swc/core": "^1.6.6",
    "@swc/helpers": "^0.5.11",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash-es": "^4.17.12",
    "@types/ms": "^0.7.34",
    "@types/node": "^20.14.9",
    "@types/shell-escape": "^0.2.3",
    "eslint": "9.6.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "mocha": "10.5.2",
    "nyc": "17.0.0",
    "prettier": "^3.3.2",
    "should": "^13.2.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.1.0",
    "type-fest": "^4.20.1",
    "typescript": "^5.5.3"
  },
  "lint-staged": {
    "*.{ts,tsx,json,yml,md}": [
      "prettier --write"
    ]
  },
  "publishConfig": {
    "registry": "https://registry.npmmirror.com/"
  },
  "packageManager": "pnpm@9.4.0+sha512.f549b8a52c9d2b8536762f99c0722205efc5af913e77835dbccc3b0b0b2ca9e7dc8022b78062c17291c48e88749c70ce88eb5a74f1fa8c4bf5e18bb46c8bd83a"
