{
  "include": ["src/**/*", "eslint.config.js", "tsdown.config.ts"],
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": true
  }
}
